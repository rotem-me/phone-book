{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "allowJs": true,
        "checkJs": false,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "moduleDetection": "force"
    },
    "lib": ["es2015"]
}